# Flask Configuration
FLASK_CONFIG=development
PORT=5000
SECRET_KEY=your_secret_key_here

# Database
MONGO_URI=mongodb://localhost:27017/internal_knowledge_db

# LLM Configuration
# Required if using OpenAI
OPENAI_API_KEY=
# Optional, default shown
OLLAMA_BASE_URL=http://localhost:11434

# LangSmith Tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=internal-knowledge-assistant

# Pinecone Vector Store
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=internal-knowledge-assistant
PINECONE_METRIC=cosine
# Optional: override embedding dimension if needed
PINECONE_DIMENSION=
# Leave Pinecone vars empty to use the in-memory vector store locally.
