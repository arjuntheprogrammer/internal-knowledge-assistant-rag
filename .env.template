# Flask Configuration
FLASK_CONFIG=development
PORT=5000
SECRET_KEY=your_secret_key_here
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Database
# Use mongodb://localhost:27017/internal_knowledge_db when running without Docker.
MONGO_URI=mongodb://mongo:27017/internal_knowledge_db

# LLM Configuration
# Required if using OpenAI
OPENAI_API_KEY=
# Optional, default shown
OLLAMA_BASE_URL=http://localhost:11434

# LangSmith Tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=internal-knowledge-assistant

# Chroma Vector Store
# Use localhost when running without Docker.
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION=internal-knowledge-assistant